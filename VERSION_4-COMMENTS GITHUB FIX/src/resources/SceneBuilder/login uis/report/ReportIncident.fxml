<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ReportIncidentController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

    <Label text="Report an Incident" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="15" style="-fx-padding: 10;">
        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="150"/>
            <ColumnConstraints minWidth="300" prefWidth="300" hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Identifier:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
        <TextField fx:id="identifierField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="+63-912-345-6789"/>

        <Label text="Identifier Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="identifierTypeCombo" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="300"/>

        <Label text="Associated Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
        <TextField fx:id="associatedNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Attack Type:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="attackTypeCombo" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="300"/>

        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="descriptionArea" GridPane.columnIndex="1" GridPane.rowIndex="4" prefRowCount="5" wrapText="true"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
        <Button fx:id="submitButton" text="Submit Report" onAction="#handleSubmit" 
                style="-fx-background-color: #ff4d4d; -fx-text-fill: white;" disable="true"/>
    </HBox>

    <Label fx:id="statusLabel" text="" style="-fx-text-fill: green;"/>

</VBox>

