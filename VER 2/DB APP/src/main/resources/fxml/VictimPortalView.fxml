<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.VictimPortalController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="header" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="16.0" left="28.0" right="28.0" top="16.0" />
         </padding>
         <children>
            <VBox alignment="CENTER_LEFT" spacing="6.0">
               <Label styleClass="title-label" text="Report a Malicious Attack" />
               <Label fx:id="portalSubtitle" styleClass="body-text" text="Step through the form to alert our cyber response desk." wrapText="true" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Hyperlink fx:id="loginLink" onAction="#handleBackToLogin" styleClass="ghost-button" text="Already filed? Go to login" />
         </children>
      </HBox>
   </top>
   <center>
      <StackPane BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="28.0" left="28.0" right="28.0" top="12.0" />
         </padding>
         <children>
            <VBox spacing="18.0" styleClass="card">
               <Label fx:id="stepTitleLabel" styleClass="subtitle-label" text="Step 1 Â· Victim Identity" />
               <TabPane fx:id="stepper" tabClosingPolicy="UNAVAILABLE">
                  <tabs>
                     <Tab text="Identity">
                        <content>
                           <VBox spacing="14.0">
                              <children>
                                 <Label styleClass="body-text" text="Confirm your contact details so our analysts can reach you." wrapText="true" />
                                 <TextField fx:id="victimNameField" promptText="Full name" styleClass="input-field" />
                                 <TextField fx:id="victimEmailField" promptText="Contact email" styleClass="input-field" />
                                 <PasswordField fx:id="victimEmailConfirmField" promptText="Re-enter email for confirmation" styleClass="password-field" />
                                 <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <ProgressIndicator fx:id="identityProgress" prefHeight="24.0" prefWidth="24.0" visible="false" />
                                    <Label fx:id="identityFeedbackLabel" styleClass="error-label" text="" visible="false" wrapText="true" />
                                 </HBox>
                                 <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <Button mnemonicParsing="false" onAction="#handleIdentityNext" prefWidth="160.0" styleClass="btn-primary" text="Continue to incident" />
                                 </HBox>
                              </children>
                           </VBox>
                        </content>
                     </Tab>
                     <Tab text="Incident">
                        <content>
                           <VBox spacing="14.0">
                              <children>
                                 <Label styleClass="body-text" text="Provide the key identifiers so we can correlate the threat." wrapText="true" />
                                 <ComboBox fx:id="identifierTypeField" promptText="Perpetrator identifier type" styleClass="combo-box" />
                                 <TextField fx:id="identifierValueField" promptText="e.g., scammer@domain.com" styleClass="input-field" />
                                 <TextField fx:id="associatedAliasField" promptText="Alias or organisation (optional)" styleClass="input-field" />
                                 <ComboBox fx:id="attackTypeField" promptText="Attack classification" styleClass="combo-box" />
                                 <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <Button mnemonicParsing="false" onAction="#handleIncidentBack" styleClass="ghost-button" text="Back" />
                                    <Button mnemonicParsing="false" onAction="#handleIncidentNext" prefWidth="160.0" styleClass="btn-primary" text="Continue to evidence" />
                                 </HBox>
                                 <Label fx:id="incidentFeedbackLabel" styleClass="error-label" text="" visible="false" wrapText="true" />
                              </children>
                           </VBox>
                        </content>
                     </Tab>
                     <Tab text="Evidence & Submit">
                        <content>
                           <VBox spacing="14.0">
                              <children>
                                 <Label styleClass="body-text" text="Describe the incident timeline and attach supporting evidence." wrapText="true" />
                                 <TextArea fx:id="incidentDescriptionField" prefHeight="160.0" promptText="Detail what happened, any demands, timings, and communication channels." styleClass="text-area" wrapText="true" />
                                 <TextField fx:id="evidencePathField" editable="false" promptText="No file selected" styleClass="input-field" />
                                 <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <Button mnemonicParsing="false" onAction="#handleBrowseEvidence" styleClass="ghost-button" text="Attach evidence" />
                                 </HBox>
                                 <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <Button mnemonicParsing="false" onAction="#handleEvidenceBack" styleClass="ghost-button" text="Back" />
                                    <Button fx:id="submitWizardButton" mnemonicParsing="false" onAction="#handleSubmitWizard" prefWidth="180.0" styleClass="btn-primary" text="Submit report" />
                                 </HBox>
                                 <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <ProgressIndicator fx:id="submissionProgress" prefHeight="24.0" prefWidth="24.0" visible="false" />
                                    <Label fx:id="submissionFeedbackLabel" styleClass="success-label" text="" visible="false" wrapText="true" />
                                 </HBox>
                              </children>
                           </VBox>
                        </content>
                     </Tab>
                  </tabs>
               </TabPane>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>


