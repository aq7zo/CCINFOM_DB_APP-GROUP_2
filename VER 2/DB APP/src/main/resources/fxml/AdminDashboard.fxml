<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.AdminDashboardController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header">
         <children>
            <Label fx:id="welcomeLabel" styleClass="title-label" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" onAction="#handleLogout" styleClass="btn-secondary" text="Logout" />
         </children>
         <padding>
            <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </HBox>
      <Separator />
      <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <Label styleClass="subtitle-label" text="ADMIN DASHBOARD" />
            <GridPane hgap="15" vgap="15" alignment="CENTER">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="50.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="50.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="50.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="50.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Button fx:id="manageVictimsButton" onAction="#handleManageVictims" styleClass="btn-primary" text="Manage Victims" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <Button fx:id="managePerpetratorsButton" onAction="#handleManagePerpetrators" styleClass="btn-primary" text="Manage Perpetrators" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <Button fx:id="manageAttackTypesButton" onAction="#handleManageAttackTypes" styleClass="btn-primary" text="Manage Attack Types" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <Button fx:id="viewAllIncidentsButton" onAction="#handleViewAllIncidents" styleClass="btn-primary" text="View All Incidents" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="createIncidentButton" onAction="#handleCreateIncident" styleClass="btn-primary" text="Create Incident Report" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                  <Button fx:id="validateReportsButton" onAction="#handleValidateReports" styleClass="btn-primary" text="Validate Reports" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Button fx:id="generateReportsButton" onAction="#handleGenerateReports" styleClass="btn-primary" text="Generate Reports" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
               </children>
            </GridPane>
         </children>
      </VBox>
   </children>
</VBox>

