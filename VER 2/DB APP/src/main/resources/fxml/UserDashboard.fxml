<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.UserDashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="16.0" styleClass="header" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="16.0" left="28.0" right="28.0" top="16.0" />
         </padding>
         <children>
            <VBox alignment="CENTER_LEFT" spacing="4.0">
               <Label fx:id="welcomeLabel" styleClass="title-label" text="Welcome, Analyst" />
               <HBox alignment="CENTER_LEFT" spacing="6.0">
                  <Label fx:id="accountStatusBadge" styleClass="tag badge-success" text="Account Active" />
                  <Label fx:id="lastLoginLabel" styleClass="body-text" text="Last login: -" />
               </HBox>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshDashboardButton" mnemonicParsing="false" onAction="#refreshDashboard" styleClass="ghost-button" text="Refresh data" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" styleClass="btn-secondary" text="Logout" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox spacing="20.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="28.0" left="28.0" right="28.0" top="16.0" />
         </padding>
         <children>
            <HBox spacing="18.0">
               <children>
                  <VBox spacing="14.0" styleClass="summary-card">
                     <Label styleClass="subtitle-label" text="Threat Watch" />
                     <Label fx:id="openReportsValue" styleClass="summary-value" text="0" />
                     <Label fx:id="openReportsTrend" styleClass="summary-trend" text="+0 since last week" />
                  </VBox>
                  <VBox spacing="14.0" styleClass="summary-card">
                     <Label styleClass="subtitle-label" text="Validated Cases" />
                     <Label fx:id="validatedReportsValue" styleClass="summary-value" text="0" />
                     <Label fx:id="validatedReportsTrend" styleClass="summary-trend" text="No changes" />
                  </VBox>
                  <VBox spacing="14.0" styleClass="summary-card">
                     <Label styleClass="subtitle-label" text="Elevation Alerts" />
                     <Label fx:id="escalationAlertsValue" styleClass="summary-value" text="0" />
                     <Label fx:id="escalationAlertsTrend" styleClass="summary-trend danger" text="No escalations detected" />
                  </VBox>
               </children>
            </HBox>
            <TabPane prefHeight="600.0" prefWidth="960.0" tabClosingPolicy="UNAVAILABLE">
               <tabs>
                  <Tab text="Submit Incident Report">
                     <content>
                        <ScrollPane fitToWidth="true" prefHeight="520.0" prefWidth="940.0" styleClass="tab-content">
                           <content>
                              <VBox spacing="22.0">
                                 <children>
                                    <VBox spacing="10.0" styleClass="card">
                                       <children>
                                          <Label styleClass="subtitle-label" text="Incident Details" />
                                          <Label styleClass="body-text" text="Provide as much detail as possible. We will correlate your report with existing threat intelligence." wrapText="true" />
                                          <GridPane hgap="20.0" vgap="18.0">
                                             <columnConstraints>
                                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                                                <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0" />
                                             </columnConstraints>
                                             <rowConstraints>
                                                <RowConstraints minHeight="40.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="40.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="40.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="40.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="90.0" vgrow="SOMETIMES" />
                                                <RowConstraints minHeight="40.0" vgrow="SOMETIMES" />
                                             </rowConstraints>
                                             <children>
                                                <VBox spacing="6.0">
                                                   <Label styleClass="body-text" text="Your Name" />
                                                   <TextField fx:id="reportNameField" promptText="Full name" styleClass="input-field" />
                                                </VBox>
                                                <VBox spacing="6.0" GridPane.columnIndex="1">
                                                   <Label styleClass="body-text" text="Contact Email" />
                                                   <TextField fx:id="reportEmailField" promptText="name@example.com" styleClass="input-field" />
                                                </VBox>
                                                <VBox spacing="6.0" GridPane.rowIndex="1">
                                                   <Label styleClass="body-text" text="Perpetrator Identifier Type" />
                                                   <ComboBox fx:id="identifierTypeCombo" promptText="Select identifier type" styleClass="combo-box" />
                                                </VBox>
                                                <VBox spacing="6.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                                   <Label styleClass="body-text" text="Perpetrator Identifier" />
                                                   <TextField fx:id="identifierField" promptText="e.g., scammer@example.com" styleClass="input-field" />
                                                </VBox>
                                                <VBox spacing="6.0" GridPane.rowIndex="2">
                                                   <Label styleClass="body-text" text="Associated Name (optional)" />
                                                   <TextField fx:id="associatedNameField" promptText="Suspected alias" styleClass="input-field" />
                                                </VBox>
                                                <VBox spacing="6.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                                   <Label styleClass="body-text" text="Attack Type" />
                                                   <ComboBox fx:id="attackTypeCombo" promptText="Choose attack classification" styleClass="combo-box" />
                                                </VBox>
                                                <VBox spacing="6.0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                                                   <Label styleClass="body-text" text="Describe the incident" />
                                                   <TextArea fx:id="descriptionArea" prefHeight="120.0" promptText="Summarize the event, suspicious behavior, and any requests made by the perpetrator." styleClass="text-area" wrapText="true" />
                                                </VBox>
                                                <GridPane GridPane.columnSpan="2" GridPane.rowIndex="4" hgap="14.0" vgap="10.0">
                                                   <columnConstraints>
                                                      <ColumnConstraints hgrow="ALWAYS" percentWidth="66.0" />
                                                      <ColumnConstraints hgrow="ALWAYS" percentWidth="34.0" />
                                                   </columnConstraints>
                                                   <children>
                                                      <VBox spacing="6.0">
                                                         <Label styleClass="body-text" text="Evidence File (optional)" />
                                                         <TextField fx:id="evidencePathField" editable="false" promptText="Attach screenshots, emails, or documents" styleClass="input-field" />
                                                      </VBox>
                                                      <VBox alignment="BOTTOM_RIGHT" spacing="6.0" GridPane.columnIndex="1">
                                                         <Label text=" " />
                                                         <Button fx:id="browseEvidenceButton" mnemonicParsing="false" onAction="#handleBrowseEvidence" prefHeight="42.0" styleClass="ghost-button" text="Browse evidence" />
                                                      </VBox>
                                                   </children>
                                                </GridPane>
                                             </children>
                                          </GridPane>
                                          <HBox alignment="CENTER_LEFT" spacing="16.0">
                                             <Button fx:id="submitReportButton" mnemonicParsing="false" onAction="#handleSubmitReport" prefHeight="46.0" prefWidth="260.0" styleClass="btn-primary" text="Submit Incident" />
                                             <ProgressIndicator fx:id="submitProgressIndicator" prefHeight="30.0" prefWidth="30.0" visible="false" />
                                             <Label fx:id="reportFeedbackLabel" styleClass="success-label" text="" visible="false" wrapText="true" />
                                          </HBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                           </content>
                           <padding>
                              <Insets bottom="12.0" right="6.0" top="6.0" />
                           </padding>
                        </ScrollPane>
                     </content>
                  </Tab>
                  <Tab text="Status Tracker">
                     <content>
                        <VBox spacing="18.0" styleClass="tab-content">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="12.0">
                                 <Label styleClass="subtitle-label" text="Monitor validation progress" />
                                 <Label fx:id="statusSummaryLabel" styleClass="body-text" text="All incidents are up to date." />
                                 <Region HBox.hgrow="ALWAYS" />
                                 <ComboBox fx:id="statusFilterCombo" prefWidth="180.0" promptText="Filter by status" styleClass="combo-box" />
                                 <Button fx:id="refreshStatusButton" mnemonicParsing="false" onAction="#refreshIncidentStatus" styleClass="ghost-button" text="Refresh" />
                              </HBox>
                              <StackPane>
                                 <children>
                                    <TableView fx:id="statusTable" prefHeight="420.0">
                                       <columns>
                                          <TableColumn fx:id="incidentIdColumn" prefWidth="90.0" text="Incident ID" />
                                          <TableColumn fx:id="reportedOnColumn" prefWidth="140.0" text="Reported On" />
                                          <TableColumn fx:id="attackColumn" prefWidth="200.0" text="Attack Type" />
                                          <TableColumn fx:id="statusColumn" prefWidth="160.0" text="Status" />
                                          <TableColumn fx:id="threatLevelColumn" prefWidth="160.0" text="Threat Level" />
                                          <TableColumn fx:id="lastUpdatedColumn" prefWidth="160.0" text="Last Updated" />
                                       </columns>
                                    </TableView>
                                    <ProgressIndicator fx:id="statusLoadingIndicator" prefHeight="60.0" prefWidth="60.0" visible="false" />
                                 </children>
                              </StackPane>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                  <Tab text="Report History">
                     <content>
                        <VBox spacing="18.0" styleClass="tab-content">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <Label styleClass="subtitle-label" text="Previous submissions" />
                                 <Label fx:id="historyStatsLabel" styleClass="body-text" text="No archived incidents yet." />
                              </HBox>
                              <TableView fx:id="historyTable" prefHeight="420.0">
                                 <columns>
                                    <TableColumn fx:id="historyIdColumn" prefWidth="90.0" text="Incident ID" />
                                    <TableColumn fx:id="historyAttackColumn" prefWidth="200.0" text="Attack Type" />
                                    <TableColumn fx:id="historyStatusColumn" prefWidth="140.0" text="Status" />
                                    <TableColumn fx:id="historyDateColumn" prefWidth="160.0" text="Submitted On" />
                                    <TableColumn fx:id="historySummaryColumn" prefWidth="260.0" text="Summary" />
                                 </columns>
                              </TableView>
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                  <Tab text="Alerts & Guidance">
                     <content>
                        <VBox spacing="18.0" styleClass="tab-content">
                           <children>
                              <VBox spacing="12.0" styleClass="info-banner">
                                 <Label styleClass="subtitle-label" text="Stay informed" />
                                 <Label fx:id="notificationSummaryLabel" styleClass="body-text" text="We will notify you if any repeated targeting or escalations are detected." wrapText="true" />
                              </VBox>
                              <ListView fx:id="notificationsList" prefHeight="360.0" />
                           </children>
                        </VBox>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
         </children>
      </VBox>
   </center>
</BorderPane>

