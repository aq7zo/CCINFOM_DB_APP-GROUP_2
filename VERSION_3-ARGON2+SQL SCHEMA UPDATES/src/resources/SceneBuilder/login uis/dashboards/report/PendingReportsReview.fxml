<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.report.PendingReportsReviewController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

    <Label text="Pending Reports &amp; Evidence Review" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="reportsCountLabel" text="Pending Reports: 0" style="-fx-font-weight: bold;"/>
        <Label fx:id="evidenceCountLabel" text="Pending Evidence: 0" style="-fx-font-weight: bold; -fx-padding: 0 0 0 20;"/>
        <Label fx:id="recycleReportsCountLabel" text="Archived Reports: 0" style="-fx-font-weight: bold; -fx-padding: 0 0 0 20;"/>
        <Label fx:id="recycleEvidenceCountLabel" text="Archived Evidence: 0" style="-fx-font-weight: bold; -fx-padding: 0 0 0 20;"/>
    </HBox>

    <Separator/>

    <TabPane fx:id="reviewTabs" prefHeight="550">
        <tabs>
            <!-- Tab 1: Pending Reports -->
            <Tab fx:id="pendingReportsTab" text="Pending Reports" closable="false">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="validateReportButton" text="Validate Selected Reports" disable="true"
                                style="-fx-background-color: #28a745; -fx-text-fill: white;"
                                onAction="#handleValidateReport"/>
                        <Button fx:id="rejectReportButton" text="Reject Report" disable="true"
                                style="-fx-background-color: #dc3545; -fx-text-fill: white;"
                                onAction="#handleRejectReport"/>
                    </HBox>
                    
                    <TableView fx:id="reportsTable" prefHeight="480">
                        <columns>
                            <TableColumn fx:id="reportSelectCol" text="Select" prefWidth="60"/>
                            <TableColumn fx:id="reportIdCol" text="Report ID" prefWidth="80"/>
                            <TableColumn fx:id="reportDateCol" text="Date Reported" prefWidth="150"/>
                            <TableColumn fx:id="reportDescriptionCol" text="Description" prefWidth="350"/>
                            <TableColumn fx:id="reportStatusCol" text="Status" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- Tab 2: Pending Evidence -->
            <Tab fx:id="pendingEvidenceTab" text="Pending Evidence" closable="false">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="verifyEvidenceButton" text="Verify Evidence" disable="true"
                                style="-fx-background-color: #28a745; -fx-text-fill: white;"
                                onAction="#handleVerifyEvidence"/>
                        <Button fx:id="rejectEvidenceButton" text="Reject Evidence" disable="true"
                                style="-fx-background-color: #dc3545; -fx-text-fill: white;"
                                onAction="#handleRejectEvidence"/>
                    </HBox>

                    <SplitPane orientation="HORIZONTAL" dividerPositions="0.58" VBox.vgrow="ALWAYS">
                        <items>
                            <VBox spacing="8" style="-fx-background-color: #ffffff; -fx-padding: 12; -fx-border-color: #e5e5e5; -fx-border-radius: 8; -fx-background-radius: 8;">
                                <Label text="Pending Evidence List" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                                <TableView fx:id="evidenceTable" prefHeight="480" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="evidenceSelectCol" text="Select" prefWidth="60"/>
                                        <TableColumn fx:id="evidenceIdCol" text="Evidence ID" prefWidth="80"/>
                                        <TableColumn fx:id="evidenceIncidentCol" text="Incident ID" prefWidth="100"/>
                                        <TableColumn fx:id="evidenceTypeCol" text="Type" prefWidth="150"/>
                                        <TableColumn fx:id="evidenceDateCol" text="Submitted" prefWidth="150"/>
                                        <TableColumn fx:id="evidenceStatusCol" text="Status" prefWidth="120"/>
                                    </columns>
                                </TableView>
                            </VBox>

                            <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 12; -fx-border-color: #e5e5e5; -fx-border-radius: 8; -fx-background-radius: 8;">
                                <Label text="Evidence Preview" style="-fx-font-weight: bold; -fx-font-size: 14;"/>
                                <StackPane prefHeight="320" style="-fx-background-color: #f5f6f8; -fx-border-color: #e5e5e5; -fx-border-radius: 8; -fx-background-radius: 8;">
                                    <ImageView fx:id="evidencePreviewImage" fitWidth="420" fitHeight="300"
                                               preserveRatio="true" smooth="true"
                                               visible="false" managed="false"/>
                                    <Label fx:id="previewPlaceholderLabel" text="Select an evidence item to preview."
                                           wrapText="true" style="-fx-text-fill: #6c757d;"
                                           StackPane.alignment="CENTER"/>
                                </StackPane>
                                <Label fx:id="previewMetadataLabel" wrapText="true"
                                       style="-fx-font-size: 12; -fx-text-fill: #333333;"/>
                                <Label fx:id="previewFilePathLabel" wrapText="true"
                                       style="-fx-font-size: 12; -fx-text-fill: #555555;"/>
                                <Hyperlink fx:id="openFileLocationLink" text="Open Full File Location"
                                           visible="false" managed="false"
                                           onAction="#handleOpenFileLocation"/>
                                <Label text="Only image evidence can be previewed here. Other file types rely on the file path link."
                                       wrapText="true" style="-fx-font-size: 11; -fx-text-fill: #6c757d;"/>
                            </VBox>
                        </items>
                    </SplitPane>
                </VBox>
            </Tab>

            <!-- Tab 3: Recycle Bin -->
            <Tab fx:id="recycleBinTab" text="Recycle Bin" closable="false">
                <VBox spacing="15" style="-fx-padding: 10;">
                    <Label text="Archived Reports" style="-fx-font-weight: bold;"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="restoreReportButton" text="Restore Selected Reports" disable="true"
                                style="-fx-background-color: #2BC1CF; -fx-text-fill: white;"
                                onAction="#handleRestoreReports"/>
                    </HBox>
                    <TableView fx:id="recycleReportsTable" prefHeight="200">
                        <columns>
                            <TableColumn fx:id="recycleReportSelectCol" text="Select" prefWidth="60"/>
                            <TableColumn fx:id="recycleReportIdCol" text="Report ID" prefWidth="80"/>
                            <TableColumn fx:id="recycleReportReasonCol" text="Reason" prefWidth="250"/>
                            <TableColumn fx:id="recycleReportArchivedCol" text="Archived At" prefWidth="150"/>
                        </columns>
                    </TableView>

                    <Label text="Archived Evidence" style="-fx-font-weight: bold;"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="restoreEvidenceButton" text="Restore Selected Evidence" disable="true"
                                style="-fx-background-color: #2BC1CF; -fx-text-fill: white;"
                                onAction="#handleRestoreEvidence"/>
                    </HBox>
                    <TableView fx:id="recycleEvidenceTable" prefHeight="200">
                        <columns>
                            <TableColumn fx:id="recycleEvidenceSelectCol" text="Select" prefWidth="60"/>
                            <TableColumn fx:id="recycleEvidenceIdCol" text="Evidence ID" prefWidth="90"/>
                            <TableColumn fx:id="recycleEvidenceIncidentCol" text="Incident ID" prefWidth="100"/>
                            <TableColumn fx:id="recycleEvidenceTypeCol" text="Type" prefWidth="150"/>
                            <TableColumn fx:id="recycleEvidenceArchivedCol" text="Archived At" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>

</VBox>

