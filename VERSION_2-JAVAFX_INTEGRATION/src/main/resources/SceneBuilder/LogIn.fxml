<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0"
      style="-fx-background-color: #2BC1CF;"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.group2.dbapp.controller.LoginController">

    <children>
        <!-- Login form pane -->
        <Pane layoutX="161.0" prefHeight="450.0" prefWidth="284.0"
              style="-fx-background-color: #ff4d4d;">
            <children>

                <!-- Email field (must be TextField, not PasswordField) -->
                <TextField fx:id="emailField"
                           layoutX="45.0" layoutY="186.0"
                           prefHeight="40.0" prefWidth="201.0"
                           promptText="Enter Email" />

                <!-- Password field -->
                <PasswordField fx:id="passwordField"
                               layoutX="45.0" layoutY="232.0"
                               prefHeight="40.0" prefWidth="201.0"
                               promptText="Enter Password" />

                <!-- Login button -->
                <Button fx:id="loginButton"
                        layoutX="44.0" layoutY="280.0"
                        onAction="#handleLogin"
                        prefHeight="40.0" prefWidth="201.0"
                        text="Log In">
                    <font>
                        <Font name="Century Gothic Bold" size="16.0" />
                    </font>
                </Button>

                <!-- Separator line -->
                <Line endX="100.0" layoutX="144.0" layoutY="335.0"
                      startX="-100.0" stroke="WHITE" />

                <!-- Sign-up button -->
                <Button fx:id="signUpButton"
                        layoutX="43.0" layoutY="351.0"
                        onAction="#handleSignUp"
                        prefHeight="23.0" prefWidth="69.0"
                        text="Sign Up">
                    <font>
                        <Font name="Century Gothic Bold" size="12.0" />
                    </font>
                </Button>

                <!-- Forgot-password button -->
                <Button fx:id="forgotPasswordButton"
                        layoutX="117.0" layoutY="351.0"
                        onAction="#handleForgotPassword"
                        prefHeight="23.0" prefWidth="129.0"
                        text="Forgot Password?">
                    <font>
                        <Font name="Century Gothic Bold" size="12.0" />
                    </font>
                </Button>

                <!-- Logo -->
                <ImageView fitHeight="164.0" fitWidth="174.0"
                           layoutX="63.0" layoutY="14.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@assets/ccinfom%20phishnet%20logo.png" />
                    </image>
                </ImageView>

            </children>
        </Pane>

        <!-- Admin login hyperlink -->
        <Hyperlink fx:id="adminLoginLink"
                   layoutX="14.0" layoutY="360.0"
                   onAction="#handleAdminLogin"
                   text="Login as Administrator"
                   textFill="WHITE">
            <font>
                <Font name="Century Gothic Bold" size="12.0" />
            </font>
        </Hyperlink>

    </children>
</Pane>